{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "checkJs": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["./components/*"],
      "@public/*": ["./public/*"],
      "@utils/*": ["./utils/*"],
      "@views/*": ["./views/*"],
      "@api": ["./api/index.js"],
      "@service": ["./service/index.js"],
      "@config": ["./config/index.js"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
